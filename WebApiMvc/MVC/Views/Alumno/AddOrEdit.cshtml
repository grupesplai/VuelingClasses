@model MVC.Models.MvcAlumnoModel
@{
    ViewBag.Title = "AddOrEdit";
}

<h2>AddOrEdit</h2>
<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Id)
